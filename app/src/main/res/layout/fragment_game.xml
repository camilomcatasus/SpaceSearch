<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/wordView"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/wordView"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_above="@+id/letterContainer"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/anonpro_bold"
        android:gravity="center"
        android:letterSpacing=".2"
        android:text="tempWord"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/letterContainer"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#2d40ba"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40sp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="A"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="B"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="C"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="D"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120sp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="E"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="F"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="G"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/noma"
                android:text="H"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#003700B3"
                app:backgroundTintMode="add" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>